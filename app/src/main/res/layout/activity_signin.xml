<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5E8FE"
    android:orientation="vertical"
    android:weightSum="2560"> <!-- 총 레이아웃 세로 길이 2560 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1060"
        android:gravity="center"
        android:background="@drawable/signin_image"
        android:orientation="vertical"
        android:weightSum="1440"
        >  <!-- 총 레이아웃 가로 길이 1440 -->
<!--        android:background="#019BE3"-->

        <ImageView
            android:id="@+id/LoginImg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/mytour_icon" />

        <TextView
            android:id="@+id/tv_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이전주투어"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/nanumsquareroundeb"
            />

        <TextView
            android:id="@+id/tv_appsuport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전주  여행  도우미"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/nanumsquareroundb"
            />

    </LinearLayout>




    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="160"
        android:weightSum="1440">

        <EditText
            android:id="@+id/LoginId"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1000"
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:background="#019BE3"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="아이디"
            android:inputType="textPersonName"
            android:maxLength="7"
            android:textColorHint="#ffffff"
            android:paddingStart="5sp"
            android:fontFamily="@font/nanumsquareroundb"
            />


        <requestFocus />
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="160"
        android:weightSum="1440">


        <EditText
            android:id="@+id/LoginPw"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1000"
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:background="#019BE3"
            android:ems="10"
            android:gravity="center_vertical"
            android:textColorHint="#ffffff"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:maxLength="7"
            android:paddingStart="5sp"
            android:fontFamily="@font/nanumsquareroundb"
            />



    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_weight="160"
        android:layout_gravity="center"
        android:weightSum="1440">

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1000"
            android:background="#0077BB"
            android:onClick="onClick"
            android:text="로그인"
            android:textColor="#ffffff"
            android:fontFamily="@font/nanumsquareroundeb"
            />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="160">

<!--        <TextView-->
<!--            android:id="@+id/search"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:onClick="onClick"-->
<!--            android:text="아이디 • 비밀번호 찾기"-->
<!--            android:textColor="#000000"-->
<!--            android:textAlignment="center"-->
<!--            android:textSize="15sp"-->
<!--            android:gravity="center_horizontal" />-->

<!--        <TextView-->

<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:onClick="onClick"-->
<!--            android:text="   /   "-->
<!--            android:textColor="#000000"-->
<!--            android:textAlignment="center"-->
<!--            android:textSize="15sp"-->
<!--            android:gravity="center_horizontal" />-->

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="회원가입"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="15sp"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_weight="160"
        android:layout_gravity="center"
        android:weightSum="1440">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_google_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />



    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="750"
        android:paddingTop="130dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Ver 1.0"
            android:gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>

